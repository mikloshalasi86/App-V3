@page
@model IndexModel

<div class="bg-gradient-to-br from-blue-500 to-purple-700 min-h-screen flex flex-col items-center justify-center text-white">
    <header class="text-center mb-10">
        <h2 class="text-6xl font-bold animate__animated animate__bounceIn">Explore Our Features</h2>
    </header>

    <main class="flex flex-wrap justify-center gap-8 p-4 w-full max-w-screen-lg">
        <div class="bg-white text-black p-6 rounded-2xl shadow-lg transform w-full sm:w-1/2 md:w-1/3 animate__animated animate__fadeInLeft">
            <img src="https://media.giphy.com/media/3o7aD2sa8vW4wXH8Y0/giphy.gif" class="rounded-t-xl mb-4" alt="Feature 1">
            <h5 class="text-2xl font-semibold mb-2">Feature One</h5>
            <p class="text-sm">Description of feature one goes here. This feature is designed to enhance user experience.</p>
        </div>
        <div class="bg-white text-black p-6 rounded-2xl shadow-lg transform w-full sm:w-1/2 md:w-1/3 animate__animated animate__fadeInUp">
            <img src="https://media.giphy.com/media/l0HlQ7zD1K4C0T9jK/giphy.gif" class="rounded-t-xl mb-4" alt="Feature 2">
            <h5 class="text-2xl font-semibold mb-2">Feature Two</h5>
            <p class="text-sm">Description of feature two goes here. This feature provides additional functionality.</p>
        </div>
        <div class="bg-white text-black p-6 rounded-2xl shadow-lg transform w-full sm:w-1/2 md:w-1/3 animate__animated animate__fadeInRight">
            <img src="https://media.giphy.com/media/26gJz8Z5j6yUuJ6Bq/giphy.gif" class="rounded-t-xl mb-4" alt="Feature 3">
            <h5 class="text-2xl font-semibold mb-2">Feature Three</h5>
            <p class="text-sm">Description of feature three goes here. This feature is essential for our users.</p>
        </div>
    </main>

    <!-- Button to trigger modal -->
    <button type="button" class="btn bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded mt-4" data-toggle="modal" data-target="#exampleModal">
        Launch Demo Modal
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Demo Modal</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    This is an example of a modal in Bootstrap. You can use this space to provide more information or options to your users.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
